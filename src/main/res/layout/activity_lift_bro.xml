<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eecs1022.liftbro.LiftBroActivity"
    android:onClick="removeALL">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please select your workout:"
        android:id="@+id/lblSelectWorkout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chest"
        android:id="@+id/lblWorkout"
        android:layout_below="@+id/lblSelectWorkout"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ButtonChestClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonBack"
        android:layout_below="@+id/lblWorkout"
        android:layout_alignLeft="@+id/lblWorkout"
        android:layout_alignStart="@+id/lblWorkout"
        android:layout_alignRight="@+id/lblWorkout"
        android:layout_alignEnd="@+id/lblWorkout"
        android:onClick="ButtonBackExClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARMS"
        android:id="@+id/buttonArms"
        android:layout_below="@+id/buttonBack"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_alignStart="@+id/buttonBack"
        android:layout_alignRight="@+id/buttonBack"
        android:layout_alignEnd="@+id/buttonBack"
        android:onClick="ButtonArmsGeneralClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOULDERS"
        android:id="@+id/buttonShoulders"
        android:layout_below="@+id/buttonArms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ButtonShoulderClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEGS"
        android:id="@+id/buttonLegs"
        android:layout_below="@+id/buttonShoulders"
        android:layout_alignRight="@+id/buttonShoulders"
        android:layout_alignEnd="@+id/buttonShoulders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ButtonLegsClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/buttonHistory"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="history"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Profile"
        android:id="@+id/buttonCreateProfile"
        android:layout_above="@+id/buttonHistory"
        android:layout_alignRight="@+id/buttonHistory"
        android:layout_alignEnd="@+id/buttonHistory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ButtonCreateProfileClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lblDisplayName"
        android:layout_below="@+id/lblSelectWorkout"
        android:layout_alignLeft="@+id/lblSelectWorkout"
        android:layout_alignStart="@+id/lblSelectWorkout"
        android:layout_alignRight="@+id/lblSelectWorkout"
        android:layout_alignEnd="@+id/lblSelectWorkout"
        android:gravity="center_horizontal"
        android:textSize="12dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear History"
        android:id="@+id/dbClear"
        android:onClick="removeALL"
        android:layout_above="@+id/buttonCreateProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
